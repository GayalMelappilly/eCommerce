<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form class="mt-5" action="/login" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <legend style="text-align: center;">Login</legend>
                 
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email Address">
                </div>

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control" name="pw" id="pw">
                </div>

                {{#if loginErr}}
                    <p class="class text-danger">{{loginErr}}</p>
                {{/if}}  

                <button type="submit" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 btn btn-primary" style="text-align: center; width: 1110px;">Submit</button>
                
                <div>
                    <a href="/signup">Create new Account?</a>
                </div>

                
            </form>
        </div>
    </div>
</div>